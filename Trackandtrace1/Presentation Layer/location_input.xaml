<Window x:Class="Trackandtrace1.location_input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trackandtrace1"
        mc:Ignorable="d"
        Title="Add Location" Height="450" Width="800">
    <Grid>
        <Button x:Name="okLoc_btn" Content="Save" HorizontalAlignment="Left" Margin="557,336,0,0" VerticalAlignment="Top" Width="124" Height="25" Click="OkLoc_btn_Click" RenderTransformOrigin="0.065,0.696"/>
        <TextBox x:Name="location_input_textbox" HorizontalAlignment="Left" Height="32" Margin="325,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <TextBlock x:Name="FullName_txtBlock" HorizontalAlignment="Left" Margin="116,255,0,0" TextWrapping="Wrap" Text="Location Name:" VerticalAlignment="Top" Height="32" Width="254" FontSize="22"/>
        <Label x:Name="location_lbl" Content="Add a location" HorizontalAlignment="Left" Margin="274,73,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Light" Height="58" Width="245"/>

    </Grid>
</Window>
